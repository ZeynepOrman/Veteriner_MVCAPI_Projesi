@model Veteriner_MVC2.Models.MVCHizmetlerModel

@{
    ViewBag.Title = "Ekle";
}

<h2>Ekle</h2>


<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(Model => Model.HizmetNo)

        <div class="form-control">
            @Html.LabelFor(model => model.HizmetAdi)<br /><br />

        </div>
        <div class="form-control">
            @Html.EditorFor(Model => Model.HizmetAdi)
            @Html.ValidationMessageFor(model => model.HizmetAdi)


        </div>

        <div class="form-control">
            @Html.LabelFor(model => model.HizmetAmaci)<br /><br />
        </div>
        <div class="form-control">
            @Html.EditorFor(Model => Model.HizmetAmaci)
            @Html.ValidationMessageFor(model => model.HizmetAmaci)


        </div>

        <div class="form-control">
            @Html.LabelFor(model => model.Fiyat)<br /><br />
        </div>

        <div class="form-control">
            @Html.EditorFor(Model => Model.Fiyat)
            @Html.ValidationMessageFor(model => model.Fiyat)


        </div>

        <div class="form-control">
            @Html.LabelFor(model => model.CalisanNo)<br /><br />
        </div>
        <div class="form-control">
            @Html.EditorFor(Model => Model.CalisanNo)
            @Html.ValidationMessageFor(model => model.CalisanNo)


        </div>

        <div class="form-control">

            <input type="submit" value="Kaydet" class="btn btn-success" />
            <input type="reset" value="Reset" class="btn btn-success" />


        </div>

    }

</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");

}



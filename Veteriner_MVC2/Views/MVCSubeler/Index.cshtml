@model IEnumerable<Veteriner_MVC2.Models.MVCSubelerModel>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Yeni Ekle", "Ekle", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubeAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CalisanSayisi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HizmetSayisi)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubeAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalisanSayisi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HizmetSayisi)
            </td>


            <td>
                <a href="@Url.Action("Ekle", "MVCSubeler", new { id = item.SubeNo })" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i>Edit</a>
                <a onclick="Sil(@item.SubeNo)" class="btn btn-success"><i class="glyphicon-trash"></i>Sil</a>
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]';

            if (successMessage != '')
                alertify.success(successMessage);

        });
        function Sil(id) {
            alertify.confirm('silme işlemi', 'Kayıtı silmek ister misiniz?', function () {
                window.location.href = '@Url.Action("Sil", "MVCSubeler")/' + id;
            }, null);


        }



    </script>

}


